@model MVC.Model.BookMark
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DeleteBook","Home",FormMethod.Post))
{
    <div class="panel panel-default" style="margin: 0 auto; width: 500px">
        <div class="panel-heading">
            <h3 class="panel-title">编辑书籍信息</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <tr>
                    <td>编号：</td>
                    <td>@Html.DisplayFor(model => model.BookNo)</td>
                </tr>
                <tr>
                    <td>书名:</td>
                    <td>@Html.DisplayFor(model => model.BookName)</td>
                </tr>
                <tr>
                    <td>价格:</td>
                    <td>@Html.DisplayFor(model => model.BookPrice)</td>
                </tr>
                <tr>
                    <td>数目:</td>
                    <td>@Html.DisplayFor(model => model.BookNum)</td>
                </tr>
                <tr>
                    <td></td>
                    <td align="right">
                        <button type="submit" class="btn btn-danger">删除</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
