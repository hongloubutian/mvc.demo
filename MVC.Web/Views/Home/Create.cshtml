@model MVC.Model.BookMark
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("AddBook", "Home", FormMethod.Post))
{
    <div class="panel panel-default" style="margin: 0 auto;width:500px">
        <div class="panel-heading">
            <h3 class="panel-title">添加书籍信息</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <tr>
                    <td>编号：</td>
                    <td>@Html.TextBoxFor(model => model.BookNo)</td>
                </tr>
                <tr>
                    <td>书名:</td>
                    <td>@Html.TextBoxFor(model => model.BookName)</td>
                </tr>
                <tr>
                    <td>价格:</td>
                    <td>@Html.TextBoxFor(model => model.BookPrice)</td>
                </tr>
                <tr>
                    <td>数目:</td>
                    <td>@Html.TextBoxFor(model => model.BookNum)</td>
                </tr>
                <tr>
                    <td></td>
                    <td align="right">
                        <button type="submit" class="btn btn-primary">添加</button>&nbsp;
                        <a class="btn btn-warning" href="@Url.Action("Index", "Home")">取消</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
